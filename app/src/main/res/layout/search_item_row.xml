<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accentLight"
    android:orientation="horizontal"
    android:padding="@dimen/layout_padding">

    <CheckBox
        android:id="@+id/search_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="@dimen/space_side_small" />

    <ImageView
        android:id="@+id/search_item_poster"
        android:layout_width="@dimen/poster_width_medium"
        android:layout_height="@dimen/poster_height_medium"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="@dimen/space_side_small"
        android:layout_marginRight="@dimen/space_side_small"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_larger" />

        <TextView
            android:id="@+id/search_item_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_side_small"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/text_normal" />

    </LinearLayout>

</LinearLayout>